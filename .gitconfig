[user]
name = Charlie Moog
email = moogcharlie@gmail.com

[merge]
tool = vimdiff
conflictstyle = diff3

[pull]
rebase = true

[fetch]
prune = true

[diff]
tool = vimdiff

[difftool]
prompt = false

[core]
editor = vim
excludesfile = ~/.gitignore
pager = delta

[delta]
plus-color = "#012800"
minus-color = "#340001"
syntax-theme = gruvbox
line-numbers = true
side-by-side = true

[interactive]
diffFilter = delta --color-only

[alias]
ca = commit --amend --verbose
ap = add -p
a = add -A
c = commit --verbose
cax = commit --amend --no-edit
cb = checkout -b
f = "! git commit --fixup $(git log --pretty='%H' -1 --invert-grep --grep 'fixup! ')"
rb = rebase --autostash --autosquash --interactive
d = diff
pushf = push --force-with-lease
s = status
last = log -1
rc = rebase --continue
releasenotes = log --no-merges --pretty=format:\"- %h %s\"
m = """! \
	if git rev-parse --verify master >/dev/null 2>/dev/null; \
	then git checkout master; else git checkout main; fi \
	"""
sm = submodule update --init --recursive
